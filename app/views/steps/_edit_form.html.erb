<div class="form-shadov">
	<div class="container">
		<div class="row">
			

			 <%= form_for(@step, remote: true, :url => {action: "update"},
										html: { class: "step-form" }) do |f| %>
		    
		      
		      <%= f.label :title, t("step.title") %>
		      <%= f.text_field :title, :class => "form-control" %>
		      
		      <%= f.label :description, t("step.description") %>
					<%= f.text_field :description, :class => "form-control" %>
		    
		    
		      <%= f.label :image, t("step.image.name") %>
		    
		        <div class="upload_button_holder">
		          <%= link_to( t("step.image.upload_button"), "#", :class => "upload_button") %>
		          <% if @unsigned %>
		            <%= f.cl_unsigned_image_upload(:image, @preset_name) %>
		          <% else %>
		            <%= f.cl_image_upload(:image, :return_delete_token=>true) %>
		          <% end %>
		        </div>
		        <span class="status"></span>
		    
		    
		    <div class="form_line">
		      <div class="form_controls">
		        <div class="preview"></div>
		      </div>
		    </div>
		    <%= f.submit t("step.submit") %>
		        
		  <% end %>


		</div>
	</div>
</div>

<%= render 'upload_script' %>