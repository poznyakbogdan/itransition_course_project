function createStep () {
	var number = setNumber();
	var stepElement = $(`
		<div data-id="<%= @step.id %>">
			<span>` + number + `</span>
			<%= cl_image_tag @url %>
			<p>
				<%= @step.title %>	
			</p>
		</div>`
	);
	stepElement.addClass('ui-state-default');
	$('#sortable').append(stepElement);
	
}
function setNumber () {
	var length = $('.ui-state-default').length + 1;
	return length;
}

createStep();