<div class="container">
	<div class="row">	
		<% if notice %>
			<p class="bg-success">
				<%= notice %>
			</p>
		<% end %>
		
		<h1><%= @instruction.name %></h1>	
		<strong><%= @category.name %></strong>
		<strong><%= @instruction.video_url %></strong>
		
		<p>
			Tags: 
				<% @instruction.tags.each do |t| %>
					<%= t.name %>
				<% end %>	
		</p>
		<% @instruction.steps.order(:number).each do |i| %>
			<div>
				<h2><%= i.number %> : <%= i.title %></h2>
				<p>description: <%= i.description %></p>
				<p>image: <%= cl_image_tag i.image_url %></p>
				
				<%= render 'comments/show_comment', :comments => i.comments %>
				
				<% if current_user %>
					<div>
						<%= render 'comments/form', :user_id => current_user.id, 
																				:step => i, :instruction_id => @instruction.id %>
					</div>
				<% end %>
			</div>
		<% end %>

		<% if current_user.id == @instruction.user_id %>
			<%= link_to "edit",  edit_instruction_path(@instruction.id),
													 :class => "instruction-edit-link" %>
		<% end %>
	</div>
</div>