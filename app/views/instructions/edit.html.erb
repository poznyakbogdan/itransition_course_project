<div class="container">  
  <div class="row">
    
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @instruction, :url => {action: "update"} do |f| %>
        <%= render 'errors' %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :video_url %>
        <%= f.text_field :video_url, class: 'form-control' %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>