<div class="container">
	<div class="table-responsive">
  	<% if notice %>
			<%= notice %>
		<% end %>	
  	
  	<table class="table">	
  		 <%= render 'info', :user => @user %>
  	</table>

  	<table class="table">

    	<% @instructions.each do |i| %>
				<tr>
					
					<%= render 'instructions/preview', :instruction => i %>
					
					<td>
						<%= render 'instructions/tags', :tags => i.tags %>
					</td>
					<td>
						<%= render 'instructions/vote', :instruction => i %>
					</td>
					<td>
						<%= link_to t("instruction.show_link"), instruction_path(i.id),
																:class => "instruction-show-link" %>
					</td>
					<% if can? :update, i %>	
						
						<td>
							<%= link_to t("instruction.edit_link"),  edit_instruction_path(i.id),
																	:class => "instruction-show-link" %>
						</td>
					<% end %>	
					<% if can? :destroy, i  %>	
						<td>
							<%= link_to t("instruction.delete_link"),  instruction_path(i.id),
							method: :delete, :class => "instruction-show-link btn btn-danger" %>
						</td>
					<% end %>	
				</tr>
    	<% end %>
  	</table>
  
	</div>
</div>