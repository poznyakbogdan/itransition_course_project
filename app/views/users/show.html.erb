<div class="container">
	<div class="table-responsive">
  	<% if notice %>
			<%= notice %>
		<% end %>	
  	
  	<table class="table">	
  		 <%= render 'info', :user => @user %>
  	</table>

  	<table class="table">
    	<% @instructions.each do |i| %>
				<tr>
					
					<%= render 'instructions/preview', :instruction => i %>
					
					<td>
						<%= render 'instructions/tags', :tags => i.tags %>
					</td>
					<td>
						<%= link_to "show", instruction_path(i.id),
																:class => "instruction-show-link" %>
					</td>
					<td>
						<%= link_to "edit",  edit_instruction_path(i.id),
																:class => "instruction-show-link" %>
					</td>
					<td>
						<%= link_to "delete",  instruction_path(i.id),
						method: :delete, :class => "instruction-show-link btn btn-danger" %>
					</td>
				</tr>
    	<% end %>
  	</table>
  
	</div>
</div>